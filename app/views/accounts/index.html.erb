<!DOCTYPE html>

<html lang="en">
<head>
  <title></title>
  
</head>
<body>

<div class="container">           
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Title</th>
        <th>Amount</th>
      </tr>
    </thead>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.date %></td>
        <td><%= account.title %></td>
        <td><%= account.amount %></td>
        <div class="btn-group" role="group">
          <td><%= link_to 'Edit', edit_account_path(account), class: 'btn btn-sm btn-warning'%></td>
          <td><%= link_to 'Delete', account_path(account), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: "Are you sure?"} %></td>
         </div>
    <% end  %>
   </table>
</div>

</body>
</html>



